{
  "name": "@zibasec/basecamp3-token-broker",
  "version": "0.0.2",
  "description": "A tiny AWS API Gateway + Lambda microservice that allows you retrieve Basecamp 3 OAuth tokens on demand.",
  "main": "src/http/get-index/index.js",
  "scripts": {
    "test": "npm run lint && npm run depcheck",
    "depcheck": "depcheck --ignore-bin-package=true --ignores='puppeteer'",
    "lint": "standard",
    "deploy": "arc deploy",
    "deploy:production": "arc deploy production",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zibasec/basecamp-token-broker.git"
  },
  "keywords": [
    "basecamp3",
    "basecamp",
    "oauth2",
    "cli"
  ],
  "author": "J. Davila (@defionscode)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zibasec/basecamp-token-broker/issues"
  },
  "homepage": "https://github.com/zibasec/basecamp-token-broker#readme",
  "devDependencies": {
    "@architect/architect": "^6.2.5",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.1.0",
    "depcheck": "^0.9.2",
    "puppeteer": "^2.1.1",
    "standard": "^14.3.3"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "restricted"
  }
}
